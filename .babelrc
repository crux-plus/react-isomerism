{
  "env": {
    "client": {
      "presets": ["env", "stage-3", "react", "flow"],
      "plugins": [
        "babel-plugin-root-import",
        [
          "transform-runtime", {
            "helpers": false,
            "polyfill": false,
            "regenerator": true,
            "moduleName": "babel-runtime"
          }
        ]
      ],
    },
    "server": {
      "presets": [
        "react",
        "flow",
        [
          "env", {
            "targets": {
              "node": true
            }
          }
        ]
      ],
      "plugins": [
        "transform-object-rest-spread",
        "babel-plugin-root-import",
        [
          "module-resolver", {
            "root": ["./src"],
            "alias": {
              "server": "server",
              "isomerism": "isomerism"
            }
          }
        ]
      ]
    }
  }
}
